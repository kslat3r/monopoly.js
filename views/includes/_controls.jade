div.controls
	h1 
		a(href="/") MonopolyJs
	div.user
		if User
			include auth/_logout
		else			
			include auth/_login
	if User					
		if Game
			div.game
				if Game.get('_players').length == Game.get('num_players')
					div.you
				else
					div.waiting
						h2 Waiting for more players (#{Game.get('num_players') - Game.get('_players').length})
		else			
			include games/_list
			include games/_create
					