div.create(ng-controller="games.create")
	h2 Create new game
	form(name="createGameForm", ng-submit="submit()")
		div.field
			label(for='name') Name
			input#name(ng-model="game.name")
		div.field
			label(for='num_players') Number of players
			select#num_players(ng-model="game.num_players")
				option(value="") --Select--
				option(value="2") 2
				option(value="3") 3
				option(value="4") 4
		div.submit
			button.btn(type='submit') Start